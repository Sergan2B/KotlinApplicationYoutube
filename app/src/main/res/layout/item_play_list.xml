<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/image_playlist"
        android:layout_width="120dp"
        android:layout_height="80dp"
        android:layout_marginTop="@dimen/normal_size_16dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/ic_launcher"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/image_playlist_shadow"
        android:layout_width="120dp"
        android:layout_height="@dimen/big_size_24dp"
        android:src="@color/black"
        app:layout_constraintBottom_toBottomOf="@+id/image_playlist"
        app:layout_constraintEnd_toEndOf="@+id/image_playlist"
        app:layout_constraintStart_toStartOf="@+id/image_playlist"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/tv_in_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/playlist"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/image_playlist"
        app:layout_constraintEnd_toEndOf="@+id/image_playlist_shadow"
        app:layout_constraintStart_toStartOf="@+id/image_playlist_shadow" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="@dimen/zero_dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/normal_size_16dp"
        android:layout_marginEnd="@dimen/normal_size_16dp"
        android:layout_marginBottom="@dimen/normal_size_16dp"
        android:textColor="@color/black"
        android:textSize="@dimen/big_size_24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/tv_under_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/image_playlist"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="32 videos series" />

    <TextView
        android:id="@+id/tv_under_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/normal_size_16dp"
        android:textColor="@color/black"
        android:textSize="@dimen/normal_size_16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/image_playlist"
        tools:text="32 videos series" />


</androidx.constraintlayout.widget.ConstraintLayout>